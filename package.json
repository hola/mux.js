{
  "name": "@hola.org/mux.js",
  "version": "2.2.1-37",
  "description": "A collection of lightweight utilities for inspecting and manipulating video container formats.",
  "repository": {
    "type": "git",
    "url": "https://github.com/hola/mux.js.git"
  },
  "main": "./lib/index.js",
  "scripts": {
    "test": "npm run lint && karma start test/karma/karma.conf.js",
    "start": "npm-run-all -p watch serve",
    "serve": "node scripts/server.js",
    "watch": "npm run mkdirs && npm-run-all -p watch:*",
    "watch:js": "watchify -s muxjs -p bundle-collapser/plugin lib/index.js -v -o dist/mux.js",
    "watch:test": "watchify test/*.test.js -p bundle-collapser/plugin -v -o dist-test/mux.js",
    "mkdirs": "mkdir -p dist dist-test",
    "build": "npm run mkdirs && npm-run-all -p build:*",
    "build:mp4": "browserify -p browserify-derequire -p bundle-collapser/plugin -s muxjs lib/mp4/index.js -o dist/mux-mp4.js",
    "build:flv": "browserify -p browserify-derequire -p bundle-collapser/plugin -s muxjs lib/flv/index.js -o dist/mux-flv.js",
    "build:js": "browserify -p browserify-derequire -p bundle-collapser/plugin -s muxjs lib/index.js -o dist/mux.js",
    "build:test": "browserify test/*.test.js -o dist-test/mux.js",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "jshint lib/**/*.js",
    "lint:test": "jshint test/*.test.js",
    "login": "c=`npm c ls`; test \"${c#*@hola}\" != \"$c\" || npm login --scope @hola.org",
    "prepublish": "npm-run-all -s build lint",
    "release": "npm-run-all -s login clean release:*",
    "release:tag": "git tag v$npm_package_version",
    "release:publish": "npm publish",
    "release:pushtags": "git push --tags origin",
    "clean": "rm -rf dist dist-test"
  },
  "browser": "./lib/index.js",
  "keywords": [
    "video",
    "container",
    "transmux",
    "mux",
    "player",
    "hls",
    "mp4",
    "flv",
    "aac",
    "h264"
  ],
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "qunit": "global:QUnit"
  },
  "author": "Brightcove",
  "license": "Apache-2.0",
  "files": [
    "lib/",
    "dist/"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "browserify-derequire": "^0.9.4",
    "browserify-shim": "^3.8.12",
    "bundle-collapser": "^1.2.1",
    "express": "^4.13.3",
    "jshint": "^2.9.1-rc2",
    "karma": "^0.13.9",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-qunit": "^0.1.5",
    "npm-run-all": "^1.4.0",
    "portscanner": "^1.0.0",
    "qunitjs": "^1.0.0",
    "serve-static": "^1.10.0",
    "watchify": "^3.6.1",
    "webworkify": "^1.0.2"
  }
}
